# #!/bin/sh

set -e

# Variables passed to the script
build=$1
cache=$2

# Create build and cache directories
mkdir -p $build
mkdir -p $cache

# Move to the cache directory
cd $cache

# Download and build Snappy
echo "-----> Downloading snappy"
git clone https://github.com/google/snappy
cd snappy
git submodule update --init  # Initialize and update submodules
cmake .                      # Use CMake to generate the build files
make                         # Build Snappy

# Copy Snappy libraries and headers to the $build directory
echo "-----> Copying Snappy libraries and headers to the build directory"
cp -r libsnappy* $build    # Copy the Snappy libraries (adjust this if paths differ)
cp -r *.h $build       # Copy the Snappy header files

cd -  # Go back to the previous directory

# Download and build libpostal
echo "-----> Downloading libpostal"

git clone https://github.com/openvenues/libpostal --depth 1
cd libpostal/
./bootstrap.sh
LDFLAGS="-L$build/lib" CFLAGS="-I$build/include" PKG_CONFIG_PATH="$build/lib/pkgconfig" ./configure --prefix='app/libpostal' --datadir=$build
cp ~/vendor/include/snappy* .

make
make install

# Copy the libpostal installation to the build directory
mv /app/libpostal $build  # Adjust the paths accordingly if needed

# Optional step: Clean up unnecessary files (if needed)
# rm -rf $cache/libpostal
# rm -rf $cache/snappy

